<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRoomMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8sp"
    android:orientation="vertical"
    app:cardCornerRadius="8sp"
    app:cardElevation="10sp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20sp">

        <ImageView
            android:id="@+id/custom_more_main"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginBottom="10sp"
            android:layout_gravity="right"
            android:src="@drawable/more" />

        <ImageView
            android:id="@+id/custom_img_main"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:scaleType="fitXY"
            android:src="@drawable/home" />


        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/tv_title_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề"
            android:drawableLeft="@drawable/ic_baseline_title_24"
            android:drawablePadding="10sp"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_type_room_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Phong tro"
            android:drawableLeft="@drawable/ic_baseline_home_24"
            android:drawablePadding="10sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_address_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="10sp"
            android:layout_marginTop="10sp"
            android:text="Địa chỉ"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_price_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:drawableLeft="@drawable/ic_baseline_attach_money_24"
            android:drawablePadding="10sp"
            android:text="Giá"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_time_added_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="HAHAHA" />

    </LinearLayout>

</androidx.cardview.widget.CardView>